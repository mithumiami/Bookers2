<header>
  <% if user_signed_in? %>
      <li>
        Home/Users/Books/Log out
      </li>
    <% else %>
      <li>
        Home/About/Sign Up/Log in
    <% end %>
</header>

<h1>画像投稿フォーム</h1>
<%= form_with model: @post_image, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>ショップ名</h4>
  <%= f.text_field :shop_name %>
  <h4>説明</h4>
  <%= f.text_area :caption %>
  <%= f.submit 'Create Book' %>
<% end %>