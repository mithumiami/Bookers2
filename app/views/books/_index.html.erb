
<p id="notice"></p>
<div class = "container px-5 px-sm-0">


    <div class="row">
      <div class="col-md-3">
        <div>

          <h2>User info</h2>
          <%= attachment_image_tag user, :profile_image, size: "63x63", format: 'jpeg', fallback: "no_image.jpg" %>
        </div>

        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>

            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>



      <div class="row">
      <%= link_to '', edit_user_path(user), class: 'btn btn-outline-secondary btn-block fas fa-user-cog btn-lg btn-block' %>
      <div class=btn btn-outline-secondary btn-block fas fa-user-cog edit_user></div>
      </div>

      <h2 class="mt-3">New book</h2>
      <p>Title</p>
      <%= form_with model: book, local:true do |f| %>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <div class="crate">
        <%= f.submit 'Create Book', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>


