  <%= render 'books/index', book: @books, user: @book.user %>

  <div class="col-md-8 offset-md-1">

      <h2>Book detail</h2>
      <table class="table hover table-inverse">
        <thead>
          <tr>

          </tr>
        </thead>

        <tbody>
          <tr>
            <td>
             <%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag @book.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %><br />
             <%= link_to @book.user.name, user_path(@book.user) %>
            </td>

            <td>
             <%= link_to @book.title, book_path(@book) %>
            </td>

            <td><%= @book.body %></td>

            <td> <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book), class: 'btn btn-success' %>
                <% end %></td>
            <td><% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book), method: :delete, class: 'btn btn-danger' %>
              <% end %></td>

          </tr>
        </tbody>
      </table>

  </div>
